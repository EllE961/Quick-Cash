<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost Range"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/min_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Cost:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/min_cost_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/min_cost_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/max_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Cost:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/max_cost_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/max_cost_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="1000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/sort_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort Order: Ascending"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/filter_by_cost_switch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:checked="false"
            android:textOff="Less to More"
            android:textOn="More to Less" />
        <TextView
            android:id="@+id/sort_order_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descending"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>

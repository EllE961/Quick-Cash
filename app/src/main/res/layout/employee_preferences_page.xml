<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ExplainingText"
        android:layout_width="313dp"
        android:layout_height="120dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="63dp"
        android:text="Please input the relevant information to you as accurately as possible."
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/yearsOfExp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/doneBtn"
        android:layout_width="259dp"
        android:layout_height="82dp"
        android:layout_marginBottom="56dp"
        android:text="DONE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primLocation" />

    <EditText
        android:id="@+id/yearsOfExp"
        android:layout_width="236dp"
        android:layout_height="0dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Years Of Experience"
        app:layout_constraintBottom_toTopOf="@+id/fow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExplainingText" />

    <EditText
        android:id="@+id/fow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="73dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Field Of Work"
        app:layout_constraintBottom_toTopOf="@+id/primLocation"
        app:layout_constraintEnd_toEndOf="@+id/primLocation"
        app:layout_constraintStart_toStartOf="@+id/yearsOfExp"
        app:layout_constraintTop_toBottomOf="@+id/yearsOfExp" />

    <EditText
        android:id="@+id/primLocation"
        android:layout_width="234dp"
        android:layout_height="0dp"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Primary Location"
        app:layout_constraintBottom_toTopOf="@+id/doneBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fow" />


</androidx.constraintlayout.widget.ConstraintLayout>